<style>
  .navbar {
    display: flex;
    justify-content: space-between; /* Adjust as needed */
    align-items: center;
    background-color: #f5f1e9;
    position: fixed;
    top: 0;
    width: 100%;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Add a subtle box shadow */
  }

  .navbar a{
    text-decoration: none;
  }

  .logo {
    max-height: 30px;
    margin-right: 4pc;
    margin-left: 1pc;
  }

  .title{
    margin-left: 0px;
    margin-right: 7pc;
    color: #900c19;
    font-size: 18px;
  }

  .search-bar {
    flex: 1;
    margin: 0 10px; 
  }

  .search-i {
    width: 80%;
    padding: 8px;
    box-sizing: border-box;
    border-radius: 4px;
    margin-top: 10px;
  }

  .search-button{
    position: absolute;
    right: 22.6pc;
    height: 2pc;
    top: 10.6px;
    width: 7pc;
    background-color: #900c19;
    color: #f2c452;
  }
</style>

<nav class="navbar">
  <%= link_to authenticated_root_path do %>
    <%= image_tag('https://img.freepik.com/premium-vector/black-white-logo-letter-jr_773552-361.jpg', alt: 'Your Logo', class: 'logo', style: 'margin-right: 2pc;') %>
  <% end %>

<%= link_to authenticated_root_path do %>
  <p class="title">Library Management</p>
<% end %>

  <div class="search-bar">
    <%= form_tag(search_books_path, method: :get) do %>
      <%= text_field_tag :query, params[:query], placeholder: 'Search...', class: 'search-i' %>
      <%= submit_tag 'Search', class: 'search-button' %>
    <% end %>
  </div>

  <!-- Cart Image -->
  <%# <%= link_to borrowed_books_path do ########this will show all the borrowed books by all users######%>
  <% if current_user && !current_user.admin? %>
    <%= link_to user_borrowed_books_borrowed_books_path do %>
      <%= image_tag('https://cdn.pixabay.com/photo/2017/01/31/00/09/books-2022463_1280.png', alt: 'Shopping Cart', class: 'logo', style: 'margin-right: 7pc; margin-left: 10pc;') %>
    <% end %>
  <% else %>
    <%= link_to borrowed_books_path do %>
      <%= image_tag('https://cdn-icons-png.flaticon.com/512/4254/4254577.png', alt: 'Shopping Cart', class: 'logo', style: 'margin-right: 7pc; margin-left: 10pc;') %>
    <% end %>
  <% end %>

  <% if current_user %>
    <%= link_to profile_path(current_user) do %>
      <%= image_tag('https://i.pinimg.com/originals/61/f7/5e/61f75ea9a680def2ed1c6929fe75aeee.jpg', alt: 'User Profile', class: 'logo', style: 'margin-right: 5pc;') %>
    <% end %>
  <% end %>


</nav>